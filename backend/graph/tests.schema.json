{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "cases": {"$ref": "#/definitions/cases"}
  },
  "definitions": {
    "cases": {
      "type": "object",
      "patternProperties": {
        ".+": {"$ref": "#/definitions/testCase"}
      }
    },
    "testCase": {
      "type": "object",
      "properties": {
        "request": {"$ref": "#/definitions/request"},
        "response": {"$ref": "#/definitions/response"}
      }
    },
    "request": {
      "type": "object",
      "properties": {
        "query": {
          "type": "string",
          "description": "GraphQL query string"
        },
        "variables": {
          "type": "object",
          "description": "GraphQL variables"
        }
      },
      "required": [
        "query"
      ]
    },
    "response": {
      "type": "object",
      "properties": {
        "data": {
          "anyOf": [
            {"type": "object"},
            {"type": "null"}
          ],
          "description": "response object"
        },
        "errors": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/error"
          }
        }
      },
      "required": [
        "data"
      ]
    },
    "error": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "description": "error message"
        },
        "path": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "error cause path"
        },
        "locations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/errorLocation"
          }
        }
      }
    },
    "errorLocation": {
      "type": "object",
      "properties": {
        "line": {
          "type": "number"
        },
        "column": {
          "type": "number"
        }
      }
    }
  }
}
